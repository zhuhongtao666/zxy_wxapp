page{
  width:100%;
  height:100%;
  overflow: hidden;
}

.bg{
  height: 100%;
}

.flex-wrp{
  padding-top: 200rpx;
}

.info-item {
  width: 80%;
  margin: 0 auto;
  border-radius: 44rpx;
  height: 88rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-top: 1rpx solid #e5e5e5;
  color: #000;
  background: #fff;
  font-size: 32rpx;
}

.btn{
  margin-top: 20rpx;
  text-align: center;
  border-radius: 44rpx;
  height: 88rpx;
  font-size: 32rpx;
  color: #000;
}
.btn-submit{
  background: #7ad5ff;
}
.btn-rest{
  background: #edff89;
}
.btn-area{
  width: 90%;
  margin: 0 auto;
}